{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Livro list</h1>
    <a href="{{ path("ricms_homepage") }}">Voltar</a></br>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Descricao</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('livro_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nome }}</td>
                <td>{{ entity.descricao }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('livro_show', { 'id': entity.id }) }}">Detalhes</a>
                        </li>
                        <li>
                            <a href="{{ path('livro_edit', { 'id': entity.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('livro_new') }}">
                Novo
            </a>
        </li>
    </ul>
    {% endblock %}
