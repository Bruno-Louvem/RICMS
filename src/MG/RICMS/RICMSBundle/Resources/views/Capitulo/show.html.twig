{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Capitulo</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ entity.nome }}</td>
            </tr>
            <tr>
                <td colspan="2">
                    Titulos
                    {% if entity.titulos|length > 0 %}
                        <ul>

                            {% for titulo in entity.titulos %}
                                <li><a href="{{ path('titulo_show', { 'id': titulo.id }) }}">{{ titulo.titulo }}</a></li>
                                {% endfor %}
                        </ul>
                    {% else %}
                        <p>Capitulo vazio</p>
                    {% endif %}
                </td>
            </tr>
            
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('livro_show', {'id': entity.idLivro.id }) }}">
               << {{ entity.idLivro.nome }}
            </a>
        </li>
    </ul>
{% endblock %}
